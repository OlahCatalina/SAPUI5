<core:FragmentDefinition 
  xmlns:core="sap.ui.core" 
  xmlns="sap.m"
  xmlns:c="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
	xmlns:ui="sap.ui">
  <ViewSettingsDialog confirm="onConfirm">
    <sortItems>
      <ViewSettingsItem key="ISBN" text="ISBN" selected="true"/>
      <ViewSettingsItem key="Title" text="{i18n>title}"/>
      <ViewSettingsItem key="Author" text="{i18n>author}"/>
      <ViewSettingsItem key="Language" text="{i18n>language}"/>
      <ViewSettingsItem key="PublicationDate" text="{i18n>publishedOn}"/>
    </sortItems>
  </ViewSettingsDialog>
</core:FragmentDefinition>